<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--CURRENT LOCATION-->
        <TextView
            android:id="@+id/current_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/weather_image"
            android:text="서울특별시 광진구"
            android:textSize="16sp"/>

        <!--WEATHER IMAGE-->
        <ImageView
            android:id="@+id/weather_image"
            android:layout_width="160dp"
            android:layout_height="160dp"
            app:layout_constraintTop_toBottomOf="@id/current_location"
            app:layout_constraintBottom_toTopOf="@id/current_temperature"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/sun" />

        <!--MAX TEMPERATURE-->
        <LinearLayout
            android:id="@+id/max_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/current_temperature"
            app:layout_constraintTop_toTopOf="@id/current_temperature"
            app:layout_constraintBottom_toTopOf="@id/min_temperature"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_drop_up_24"
                app:tint="#fa5032"/>

            <TextView
                android:id="@+id/max_temp_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="60°"
                android:textSize="12sp"
                android:textColor="#fa5032"/>
        </LinearLayout>


        <!--MIN TEMPERATURE-->
        <LinearLayout
            android:id="@+id/min_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/max_temperature"
            app:layout_constraintRight_toRightOf="@id/max_temperature"
            app:layout_constraintTop_toBottomOf="@id/max_temperature"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_drop_down_24"
                app:tint="#3278fa"/>
            <TextView
                android:id="@+id/min_temp_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="40°"
                android:textSize="12sp"
                android:textColor="#3278fa"/>
        </LinearLayout>

        <!--CURRENT TEMPERATURE-->
        <TextView
            android:id="@+id/current_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/weather_image"
            app:layout_constraintBottom_toTopOf="@id/weather_type"
            android:text="50℃"
            android:textSize="30sp"
            android:textColor="@color/black"/>

        <!--TEMPERATURE DIFFERENCE-->
        <TextView
            android:id="@+id/temp_diff_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/current_temperature"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/current_temperature"
            app:layout_constraintBottom_toBottomOf="@id/weather_type"
            android:gravity="center"
            android:text="어제보다 \n10° 낮아요"
            android:textSize="12sp"/>

        <!--WEATHER TYPE-->
        <TextView
            android:id="@+id/weather_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/current_temperature"
            app:layout_constraintBottom_toTopOf="@id/extra_info"
            android:text="맑음"
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <!--EXTRA INFORMATION-->
        <LinearLayout
            android:id="@+id/extra_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/weather_type"
            app:layout_constraintBottom_toTopOf="@id/by_time_text"
            android:orientation="horizontal">

            <!--HUMIDITY-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dust_state_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="center"
                    android:text="84%"
                    android:textSize="10sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="습도"
                    android:textSize="12sp"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <!--WIND SPEED-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/super_dust_state_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="center"
                    android:text="50m/s"
                    android:textSize="10sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="풍속"
                    android:textSize="12sp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <!--POP-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/rain_probability_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="center"
                    android:text="10%"
                    android:textSize="10sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="강수확률"
                    android:textSize="12sp"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <!--RAIN VOLUME-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/precipitation_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="center"
                    android:text="10mm"
                    android:textSize="10sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="강수량"
                    android:textSize="12sp"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/extra_info"
            app:layout_constraintBottom_toTopOf="@id/by_time_text"
            android:background="#dadada"/>

        <TextView
            android:id="@+id/by_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/extra_info"
            app:layout_constraintBottom_toTopOf="@id/weather_by_time_list"
            android:text="시간대별 날씨"/>

        <!--WEATHER BY TIME LIST-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/weather_by_time_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/by_time_text"
            app:layout_constraintBottom_toTopOf="@id/by_day_text"
            android:scrollbars="none"
            android:overScrollMode="never" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/weather_by_time_list"
            app:layout_constraintBottom_toTopOf="@id/by_day_text"
            android:background="#dadada"/>

        <TextView
            android:id="@+id/by_day_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/weather_by_time_list"
            app:layout_constraintBottom_toTopOf="@id/weather_by_day_list"
            android:text="주간 날씨"/>

        <!--WEATHER BY DAY LIST-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/weather_by_day_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/by_day_text"
            android:scrollbars="none"
            android:overScrollMode="never" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>