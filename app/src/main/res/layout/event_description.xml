<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/detail_event_view"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이벤트 이름"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/detail_desc"
                android:paddingVertical="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이벤트 설명 가나다라마 abcde あいうえお 가나다라마 abcde あいうえお 가나다라마 abcde あいうえお"/>
        </LinearLayout>

        <View
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="20dp"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/line"/>

        <!--START TIME-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detail_start_text"
                android:paddingHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="시작 시간"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/detail_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_weight="2"
                android:text="0월 0일"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/detail_start_time"
                android:paddingHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_weight="1"
                android:text="10:00"
                android:textSize="16sp"/>
        </LinearLayout>


        <!--END TIME-->
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detail_end_text"
                android:paddingHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="종료 시간"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/detail_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_weight="2"
                android:text="0월 0일"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/detail_end_time"
                android:paddingHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_weight="1"
                android:text="10:00"
                android:textSize="16sp"/>
        </LinearLayout>

        <View
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="20dp"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="위치"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/detail_location"
                android:paddingHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="어딘가"/>
        </LinearLayout>

        <View
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="20dp"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:paddingHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="부 이벤트"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/detail_add_sub"
                android:paddingHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_add_circle_24"
                app:tint="@color/pink3" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/detail_cancel"
            android:text="취소"
            android:textSize="15sp"
            android:textColor="@color/baseTextColor"
            android:gravity="center"
            android:background="#00000000"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/detail_modify"
            android:text="수정"
            android:textSize="15sp"
            android:textColor="@color/baseTextColor"
            android:gravity="center"
            android:background="#00000000"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/detail_delete"
            android:text="삭제"
            android:textSize="15sp"
            android:textColor="@color/red"
            android:gravity="center"
            android:background="#00000000"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>